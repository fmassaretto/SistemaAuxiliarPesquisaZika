@model IEnumerable<SistemaAuxiliarPesquisaZika.Domain.DTO.RNExameViewModel>

@{
    ViewBag.Title = "Resultado de Exame do Recém-Nascido";
}

<h2>Exame do Recém-Nascido</h2>

<p>
    @if (!User.IsInRole("Pesquisador"))
    {
        @Html.ActionLink("Cadastrar Exame", $"Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RecemNascido.NomeCompleto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecemNascido.Paciente.NomeCompleto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RecemNascido.NomeCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecemNascido.Paciente.NomeCompleto)
        </td>
        <td>
            @if (!User.IsInRole("Pesquisador"))
            {
                @Html.ActionLink("Editar", $"Edit", new {id = item.RecemNascido.Id})
            }|
            @Html.ActionLink("Exibir Resultado do Exame", $"Details", $"ExamesRecemNascido", new {id = item.RecemNascido.Id}, null) |
            @if (!User.IsInRole("Pesquisador"))
            {
                @Html.ActionLink("Deletar", $"Delete", new {id = item.RecemNascido.Id})
            }
        </td>
    </tr>
}

</table>
