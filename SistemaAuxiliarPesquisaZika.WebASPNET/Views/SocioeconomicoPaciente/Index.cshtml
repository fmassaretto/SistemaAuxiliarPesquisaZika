@model IEnumerable<SistemaAuxiliarPesquisaZika.Domain.SocioeconomicoPaciente>

@{
    ViewBag.Title = "Dados Socioeconômico do Paciente";
}

<h2>Dados Socioeconômico do Paciente</h2>

<p>
    @if (!User.IsInRole("Pesquisador"))
    {
        @Html.ActionLink("Cadastrar Socioeconômico", $"Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.NumeroCaso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.NomeCompleto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.DataNascimento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.NumeroCaso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.NomeCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.DataNascimento)
        </td>
        <td>
            @if (!User.IsInRole("Pesquisador"))
            {
                @Html.ActionLink("Editar", $"Edit", new {id = item.Id})
            }|
            @Html.ActionLink("Detalhes", $"Details", new {id = item.Id}) |
            @if (!User.IsInRole("Pesquisador"))
            {
                @Html.ActionLink("Deletar", $"Delete", new {id = item.Id})
            }
        </td>
    </tr>
}

</table>
